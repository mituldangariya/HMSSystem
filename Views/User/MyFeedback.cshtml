@model List<HMSSystem.Models.Feedback>

@{
    ViewData["Title"] = "My Feedback";
}

<div class="card">
    <div class="card-header">
        <h5>My Feedback</h5>
    </div>
    <a asp-action="SubmitFeedback"
       asp-controller="User"
       class="btn btn-sm btn-primary">
        <i class="fas fa-plus"></i> Create Feedback
    </a>

    <div class="card-body">

        @if (!Model.Any())
        {
            <p class="text-muted text-center">No feedback submitted yet.</p>
        }
        else
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Rating</th>
                        <th>Comments</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CreatedDate.ToString("dd-MMM-yyyy")</td>
                            <td>@item.Rating ⭐</td>
                            <td>@item.Comments</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>
</div>
