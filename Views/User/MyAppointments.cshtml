@model List<HMSSystem.Models.Appointment>
@{
    ViewData["Title"] = "My Appointments";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4><i class="fas fa-list"></i> My Appointments</h4>
    <a asp-action="BookAppointment" class="btn btn-primary">
        <i class="fas fa-plus"></i> Book New
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Purpose</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var apt in Model)
                        {
                            <tr>
                                <td>#@apt.AppointmentId</td>
                                <td>@apt.AppointmentDate.ToString("dd-MMM-yyyy")</td>
                                <td>@apt.TimeSlot</td>
                                <td>@apt.Purpose</td>
                                <td>
                                    <span class="status-badge status-@apt.Status.ToLower()">
                                        @apt.Status
                                    </span>
                                </td>
                                <td>
                                    @* <a asp-action="AppointmentDetails" asp-route-id="@apt.AppointmentId"
                                       class="btn btn-sm btn-info" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a> *@
                                    @if (apt.Status == "Approved" || apt.Status == "Completed")
                                    {
                                        <a asp-action="DownloadAppointment" asp-route-id="@apt.AppointmentId"
                                           class="btn btn-sm btn-success" title="Download">
                                            <i class="fas fa-download"></i>
                                        </a>
                                    }
                                    @if (apt.Status == "Completed")
                                    {
                                        <a asp-action="SubmitFeedback" asp-route-id="@apt.AppointmentId"
                                           class="btn btn-sm btn-warning" title="Feedback">
                                            <i class="fas fa-star"></i>
                                        </a>
                                    }
                                    @if (apt.Status == "Pending")
                                    {
                                        <a asp-action="EditAppointment"
                                           asp-route-id="@apt.AppointmentId"
                                           class="btn btn-sm btn-primary"
                                           title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    }

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
                <p class="text-muted">No appointments found</p>
                <a asp-action="BookAppointment" class="btn btn-primary">Book Your First Appointment</a>
            </div>
        }
    </div>
</div>