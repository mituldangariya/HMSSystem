@model List<HMSSystem.Models.Appointment>
@{
    ViewData["Title"] = "All Appointments";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4><i class="fas fa-calendar"></i> All Appointments</h4>
    <a asp-action="DownloadReport" class="btn btn-success">
        <i class="fas fa-file-excel"></i> Download Report
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <a asp-action="Appointments" class="btn btn-sm btn-outline-secondary">All</a>
            <a asp-action="Appointments" asp-route-status="Pending" class="btn btn-sm btn-outline-warning">Pending</a>
            <a asp-action="Appointments" asp-route-status="Approved" class="btn btn-sm btn-outline-success">Approved</a>
            <a asp-action="Appointments" asp-route-status="Rejected" class="btn btn-sm btn-outline-danger">Rejected</a>
            <a asp-action="Appointments" asp-route-status="Completed" class="btn btn-sm btn-outline-info">Completed</a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>User</th>
                        <th>Email</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Purpose</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var apt in Model)
                    {
                        <tr>
                            <td>#@apt.AppointmentId</td>
                            <td>@apt.User?.FullName</td>
                            <td>@apt.User?.Email</td>
                            <td>@apt.AppointmentDate.ToString("dd-MMM-yyyy")</td>
                            <td>@apt.TimeSlot</td>
                            <td>@apt.Purpose</td>
                            <td>
                                <span class="status-badge status-@apt.Status.ToLower()">
                                    @apt.Status
                                </span>
                            </td>
                            <td>
                                <a asp-action="AppointmentDetails" asp-route-id="@apt.AppointmentId"
                                   class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i> Manage
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>